#!/bin/bash

case=$1
test_type=$2
nprocs=$3
ppn=$4

thr=1

echo $case     >  SESSION.NAME
echo `pwd`'/' >>  SESSION.NAME
touch $case.rea
rm -f ioinfo
mv -f $case.his $case.his1
mv -f $case.sch $case.sch1

aprun -n $nprocs \
      -N $ppn \
      -d $thr \
      -cc depth \
      -j 1 \
      ./nek5000 > ${case}.log.${test_type}.${nprocs}.{$ppn} 2>&1

exit $?
