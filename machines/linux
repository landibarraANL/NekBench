#!/bin/sh

#-------------------------------------------------------------------------------
# Set default values for compilation
#-------------------------------------------------------------------------------
: ${nb_fc:="mpif77"}
: ${nb_cc:="mpicc"}
: ${nb_fflags:=}
: ${nb_cflags:=}
: ${nb_usr_lflags:=}

#-------------------------------------------------------------------------------
# Submission parameters
#-------------------------------------------------------------------------------
: ${nb_np:=4}
: ${nb_ppn:=4}

#-------------------------------------------------------------------------------
# Build the run command for the machine
#-------------------------------------------------------------------------------
if [ $nb_np = 0 ]; then
  NB_RUN_CMD=":"
else
  NB_RUN_CMD="."
fi
