#!/bin/sh

# Machine: Cori - KNL
# Variables referenced from outside: $nb_np

nb_arg3=
nb_ppn=64
nb_partition=regular
nb_time=01:00:00

nb_nnodes=$(( nb_np/nb_ppn ))

if [ $nb_nnodes = 0 ]; then
  NB_RUN_CMD=":"
else
  NB_RUN_CMD="sbatch -N $nb_nnodes
                     -C knl,quad,flat
                     -p $nb_partition
                     -t $nb_time"
fi
