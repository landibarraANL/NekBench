#!/bin/sh

# Machine: Theta
# Variables referenced from outside: $nb_np

nb_np=${nb_np:-64}
nb_ppn=${nb_ppn:-64}
nb_project=GasJetsCylPrio_tesp
nb_queue=default
nb_time=60

nb_nnodes=$(( nb_np/nb_ppn ))

if [ $nb_nnodes -le 4 ]; then
  nb_queue=debug-flat-quad
fi

if [ $nb_nnodes = 0 ]; then
  NB_RUN_CMD=":"
else
  NB_RUN_CMD="qsub -n $nb_nnodes
                   -q $nb_queue
                   -t $nb_time
                   -A $nb_project"
fi
